#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew\nâ™»ï¸ resource xinitrc\nğŸ•¹ï¸game stream mode\nğŸ–¥ï¸dual monitor mode\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ sleep\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	"ğŸšª leave $WM") kill -TERM "$(wmpid)" ;;
	"â™»ï¸ renew $WM") kill -HUP "$(wmpid)" ;;
	"â™»ï¸ resource xinitrc") source ~/.config/x11/xinitrc ;;
	"ğŸ•¹ï¸game stream mode") xrandr --output DisplayPort-0 --off --output DisplayPort-1 --mode 1920x1080 --pos 0x0 --rotate normal --output DisplayPort-2 --off --output HDMI-A-0 --off ;;
	"ğŸ–¥ï¸dual monitor mode") xrandr --output DisplayPort-0 --primary --off --output DisplayPort-1 --mode 1920x1080 --pos 0x790 --rotate normal --output DisplayPort-2 --off --output HDMI-A-0 --mode 2560x1080 --pos 1920x0 --rotate right ;;
	'ğŸ» hibernate') slock $ctl hibernate -i ;;
	'ğŸ’¤ sleep') slock $ctl suspend -i ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
